<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PA.CoursePage"
             Title="CoursePage">
    <VerticalStackLayout>
        <Button x:Name="BackButton" Text="Back" Clicked="BackButton_Clicked"/>
        <HorizontalStackLayout HorizontalOptions="CenterAndExpand">
            <Label 
            Text="Currently Viewing: "
            VerticalOptions="Center" />
            <Label Text="{Binding termName}" VerticalOptions="Center"/>
        </HorizontalStackLayout>
        <Button x:Name="AddCourseButton" Text="Add a Course" HorizontalOptions="FillAndExpand" Clicked="AddCourseButton_Clicked"/>
        <ListView x:Name="courseView" FlexLayout.Grow="1" HasUnevenRows="True" ItemTapped="courseView_ItemTapped">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <VerticalStackLayout Padding="5">
                            <Label Text="{Binding CourseName}"  FontSize="17" FontAttributes="Bold"/>
                        </VerticalStackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </VerticalStackLayout>
</ContentPage>